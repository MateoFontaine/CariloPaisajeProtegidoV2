        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .obligatorio p{
        font-size: .7rem;
        color: red;
    }
    .fomrsText{
        margin: 1rem 0rem;
    }
    input{
        width: 100%;
    }
    textarea{
        width: 100%;
    }
