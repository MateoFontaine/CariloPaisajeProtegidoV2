    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Tempora, mollitia!</p>
    <div class="forms">
        <div class="fomrsText">
            <p>Nombre Completo</p>
            <input type="text">
        </div>
        <div class="fomrsText">
            <p>Correo Electronico</p>
            <input type="email">
        </div>
        <div class="fomrsText">
            <p>Telefono</p>
            <input type="number">
        </div>
